# Backend Environment Variables (Copy to backend/.env)

# JWT Authentication (CRITICAL: Must match frontend JWT_SECRET)
JWT_SECRET=your-super-secret-key-change-in-production-12345678
JWT_ALGORITHM=HS256

# Database Configuration
DATABASE_URL=sqlite:///./data/todo.db

# CORS Configuration (Frontend URLs)
ALLOWED_ORIGINS=["http://localhost:3000"]

# Logging Configuration
LOG_LEVEL=DEBUG

# Environment
ENVIRONMENT=development

# OpenAI Configuration (Optional - only needed for agents)
OPENAI_API_KEY=
